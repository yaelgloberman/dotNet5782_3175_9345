<Window x:Class="PL.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="CustomerWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Name="lblId" Content="id:" Grid.Column="1" FontSize="22"/>
        <Label Name="lblName" Content="name:" Grid.Column="1" Grid.Row="1" FontSize="22"/>
        <Label Name="lblPhoneNumber" Content="phone number:" Grid.Column="1" Grid.Row="2" FontSize="22"/>
        <Label Name="lblLongitude" Content="longitude:" Grid.Column="1" Grid.Row="3" FontSize="22"/>
        <Label Name="lblLatitude" Content="latitude:" Grid.Column="1" Grid.Row="4" FontSize="22"/>
        <TextBox Name="txbID" Grid.Row="0"  Grid.Column="2"/>
        <TextBox Name="txbName"  Grid.Column="2" Grid.Row="1"/>
        <TextBox Name="txbPhoneNumper"  Grid.Column="2" Grid.Row="2"/>
        <TextBox Name="txbLongitude" Grid.Column="2" Grid.Row="3"/>
        <TextBox Name="txtLatitude" Grid.Column="2" Grid.Row="4"/>
        <Button x:Name="btnAddCustomer" Content="add customer" Grid.Column="3" />
        <Button x:Name="btnUpdateCustomer" Content="update customer" Grid.Column="3" Grid.Row="1"/>
        <Button x:Name="btndeleteCustomer" Content="delete customer" Grid.Column="3" Grid.Row="2"/>
        <Button x:Name="btnSentParcels" Content="SentParcels" Grid.Column="3" Grid.Row="3" Click="btnSentParcels_Click"/>
        <Button x:Name="btnReceiveParcel" Content="ReceiveParcel" Grid.Column="3" Grid.Row="4"/>


    </Grid>
</Window>